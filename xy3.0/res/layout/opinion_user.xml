<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3f5"
    android:orientation="vertical" >
    <include 
        layout="@layout/boyi_detail_top_title"
        />
<TextView 
    android:layout_marginTop="22dp"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="您在使用中有任何不便或建议，欢迎反馈给我们 !"
    android:textColor="#00be8e"
    android:textSize="14sp"
    />
<RelativeLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"    
    android:layout_marginTop="16.7dp"
    >
<LinearLayout 
            android:id="@+id/opinion_layout_bar1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv1"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="更新太慢"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
<LinearLayout 
            android:id="@+id/opinion_layout_bar2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv2"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="书量太少"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
<LinearLayout 
            android:id="@+id/opinion_layout_bar3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_marginRight="17.3dip"
            android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv3"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="收费情况"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
</RelativeLayout>
<RelativeLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="8.3dip"    
    >
<LinearLayout 
            android:id="@+id/opinion_layout_bar4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv4"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="界面难看"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
<LinearLayout 
            android:id="@+id/opinion_layout_bar5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv5"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="太费流量"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
<LinearLayout 
            android:id="@+id/opinion_layout_bar6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17.3dip"
            android:layout_marginRight="17.3dip"
            android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            >
		<ImageView 
		    android:id="@+id/opinion_layout_iv6"
		    android:layout_height="18.67dip"
		    android:layout_width="18.67dip"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boy_posterror_no"
		    />
        <TextView         
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10.6dip"
        	android:gravity="center_vertical"
        	android:layout_gravity="center_vertical"
            android:text="其他原因"
            android:textColor="@color/boyi_text_grey"
            android:textSize="12.67sp" 
            />
        </LinearLayout>
</RelativeLayout>

	<EditText
	    android:id="@+id/suggest_content_et"
	    android:layout_width="match_parent"
	    android:layout_height="186dp"
	    android:layout_marginLeft="17.0dip"
	    android:layout_marginRight="17.0dip"
	    android:layout_marginTop="17dip"
	    android:background="@drawable/ic_text_frame_gray_normal"
	    android:gravity="left|top"
	    android:hint="输入您想说的话......（限制200字以内）"	    
	    android:minLines="5"
	    android:padding="6dip"
	    android:textSize="10.6sp" />
	
	<Button 
	    android:id="@+id/user_opinion_post"
	    android:layout_height="44dp"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="17.0dip"
	    android:layout_marginRight="17.0dip"
	    android:layout_marginTop="33dp"
	    android:text="提交"
	    android:textColor="@color/white"
	    android:background="@drawable/btn_white_to_blue_selector"
	    />

</LinearLayout>