<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
         android:layout_width="105dp"
         android:layout_height="wrap_content"
         android:background="@drawable/boyi_xiala_bg"
         android:orientation="vertical"
         android:layout_marginRight="8.5dp"
         android:id="@+id/menu_ll">
       <LinearLayout
        android:id="@+id/enter_bookshelf"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:src="@drawable/bookshelf"
            android:layout_marginRight="10dp"/>
       <TextView 
          android:id="@+id/text_go"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="#8a8a8a"
          android:textSize="13sp"
          android:text="看书架"/>  
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/rl_bookstore"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
       <View
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/enter_bookstore" 
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_width="105dp"
        android:layout_height="45dp">
      <ImageView 
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:src="@drawable/enter_boostore"
            android:layout_marginRight="10dp"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="逛书城"
          android:textSize="13sp"
          android:textColor="#8a8a8a"
          /> 
          </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:id="@+id/usercenter_rl"
        >
     <View
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/enter_user_center" 
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
      <ImageView 
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:src="@drawable/boyi_user_center"
            android:layout_marginRight="10dp"
            />
      <TextView
          android:id="@+id/text" 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="个人中心"
          android:textSize="13sp"
          android:textColor="#8a8a8a"
          />  
    </LinearLayout>
    </RelativeLayout>
    
    </LinearLayout>
    </LinearLayout>
    
    
    

