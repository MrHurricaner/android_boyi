<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout 
        android:background="#ECEBE9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00be8e"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/boyi_kindly_remind"
                />
            <ImageView 
                android:id="@+id/guanbi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/boy_guanbi"
                android:layout_marginRight="14dp"
                android:layout_alignParentRight="true"
                />
            <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#cbcac8"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boyi_dark_gray" >
        </LinearLayout>
        
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp">

        <TextView
            android:id="@+id/read_endpage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="@string/boyi_readbook_endpage"
            android:textColor="#474644"
            android:layout_marginLeft="16.67dp"
            android:layout_marginRight="16.67dp"
            android:textSize="20sp" />
   </RelativeLayout>
   <LinearLayout 
       android:id="@+id/read_recommend_ll"
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:orientation="horizontal"

       android:layout_marginBottom="20dp"

       android:layout_marginLeft="16.7dp"
       android:layout_marginRight="16.7dp"

       >
       <Button
            android:id="@+id/confirm_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" 
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_white_to_blue_selector"
            android:textColor="@color/boyi_white"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/boyi_read_goshelf"/>

        <Button
            android:id="@+id/cancel_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" 
            android:text="@string/boyi_read_gostore"
            android:textColor="#474644"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/btn_gray_selector"
            />
   </LinearLayout>
   <TextView 
       android:id="@+id/read_recommend_text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       
       android:textSize="16.7sp"
       android:textColor="#474644"
       android:text="@string/boyi_endpage_book"
       />
	<LinearLayout 
	    android:id="@+id/bottom_ll"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="17dp"
	    >
        
    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="2.3"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <com.boyiqove.library.volley.toolbox.NetworkImageView 
               android:id="@+id/endpage_imageview1"
               android:layout_width="match_parent"
               android:layout_height="108dip"
               android:scaleType="fitCenter"
               android:src="@drawable/boyi_addbook"
               />
           <TextView 
               android:id="@+id/bookname1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12.3dp"
               android:gravity="center"
               android:lines="1"
               android:ellipsize="marquee"
               android:textSize="12sp"
               android:textColor="#474644"
               />
   
           
  </LinearLayout>
  
       <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:layout_weight="1"
           >
           
       </LinearLayout>
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="2.3"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <com.boyiqove.library.volley.toolbox.NetworkImageView 
               android:id="@+id/endpage_imageview2"
               android:layout_width="match_parent"
               android:layout_height="108dip"
               android:scaleType="fitCenter"
               android:src="@drawable/boyi_addbook"
               />
           <TextView 
               android:id="@+id/bookname2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12.3dp"
               android:gravity="center"
               android:lines="1"
               android:ellipsize="marquee"
               android:textSize="12sp"
               android:textColor="#474644"
               />
           
           
       </LinearLayout>
        <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:layout_weight="1"
           >
           
       </LinearLayout>
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="2.3"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <com.boyiqove.library.volley.toolbox.NetworkImageView 
               android:id="@+id/endpage_imageview3"
               android:layout_width="match_parent"
               android:layout_height="108dip"
               android:scaleType="fitCenter"
               android:src="@drawable/boyi_addbook"
               />
           <TextView 
               android:id="@+id/bookname3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12.3dp"
               android:gravity="center"
               android:lines="1"
               android:ellipsize="marquee"
               android:textSize="12sp"
               android:textColor="#474644"
               />
           
           
       </LinearLayout> 
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            >
           <TextView 
               android:id="@+id/sum1"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="@color/boyi_textview_green_color"
               />
           <TextView 
               android:gravity="center"
               android:id="@+id/look1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="#474644"
               />
        </LinearLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
   
           <TextView 
               android:id="@+id/sum2"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="@color/boyi_textview_green_color"
               />
           <TextView 
               android:gravity="center"
               android:id="@+id/look2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="#474644"
               />
        </LinearLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >
          <TextView 
               android:id="@+id/sum3"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="@color/boyi_textview_green_color"
               />
           <TextView 
               android:id="@+id/look3"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="4.7dp"
               android:textColor="#474644"
               />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

    

</RelativeLayout>