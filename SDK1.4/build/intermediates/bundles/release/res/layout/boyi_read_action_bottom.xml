<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/read_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"    
    android:orientation="vertical"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"	
    	android:paddingBottom="50dip"
        >

        <ImageView
            android:id="@+id/boe_night_stytle"
            android:layout_width="33.3dip"
            android:layout_height="33.3dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16.7dip"
            android:background="@drawable/boe_read_night" />

    </RelativeLayout>
 <LinearLayout 
     android:id="@+id/down_more_progress"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/boyi_black_touming2"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
     >
     <TextView 
         android:id="@+id/down_bookname"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="正在缓存：三国演义 "
         android:textColor="#dbdddc"
         android:textSize="12sp"
         />
     <TextView 
         android:id="@+id/down_progress"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="(30"
         android:textColor="#dbdddc"
         android:textSize="12sp"
         />
     <TextView 
         android:id="@+id/down_totalsize"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="/50)..."
         android:textColor="#dbdddc"
         android:textSize="12sp"
         />
     
 </LinearLayout>   
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="62.7dip"
    android:background="@color/boyi_black_touming"
    android:orientation="horizontal"
    >
    <LinearLayout 
        android:id="@+id/read_button_bar1"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/detail_bar"
            android:layout_height="22.7dip"
            android:layout_width="22.7dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/read_bottom_detil"
            />
        <TextView 
            android:layout_marginTop="5.3dip"
            android:textSize="13.33sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="书籍详情"
            android:textColor="#dbdddc"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/read_button_bar2"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/dictory_bar"
            android:layout_height="22.7dip"
            android:layout_width="22.7dip"
            android:background="@drawable/read_dictory_bar"
            android:layout_gravity="center_horizontal"
            />
        <TextView 
             android:layout_marginTop="5.3dip"
            android:textSize="13.33sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="目录"
            android:textColor="@color/boyi_white"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/read_button_bar3"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
         <ImageView 
            android:id="@+id/error_image_bar"
            android:layout_height="22.7dip"
            android:layout_width="22.7dip"
            android:background="@drawable/read_post_error"
            android:layout_gravity="center_horizontal"
            />
        <TextView 
            android:layout_marginTop="5.3dip"
            android:textSize="13.33sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="报错"
            android:textColor="@color/boyi_white"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/read_button_bar4"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
         <ImageView 
            android:id="@+id/setting_image_bar"
            android:layout_height="22.7dip"
            android:layout_width="22.7dip"
            android:background="@drawable/read_setting_bar"
            android:layout_gravity="center_horizontal"
            />
        <TextView 
            android:layout_marginTop="5.3dip"
            android:textSize="13.33sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="阅读设置"
            android:textColor="@color/boyi_white"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>