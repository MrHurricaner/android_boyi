<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:id="@+id/dir_first_bar"
        android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
        >
     <include       
        layout="@layout/boyi_detail_top_title"
        android:visibility="gone"
        android:layout_marginBottom="17dp"
        />   
	<LinearLayout 
	    android:id="@+id/dir_title_actorbar"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    >
    <TextView
        android:id="@+id/content_bookname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.7dip"
        android:layout_marginTop="16dip"
        android:textColor="#aa8b69"
        android:textSize="26.7dp" />

    <TextView
        android:id="@+id/content_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.7dip"
        android:layout_marginTop="16dp"
        android:textColor="#998d80"
        android:textSize="@dimen/button_scan_margintop" 
        android:text="小米的书"
        />

    <com.boyiqove.view.DashedLine
    android:id="@+id/hengxin"
    android:layout_height="0.2dip"
    android:layout_width="match_parent"
    android:layout_marginLeft="16.7dip"
    android:layout_marginTop="16dp"
    android:textColor="#c8c0b6"
    />
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/rl_title_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dir_first_bar"  
        android:layout_marginTop="21.3dp"   
        >
        <TextView 
            android:id="@+id/dir_text"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="16.7dip"
			android:text="目录："  
			android:textSize="20dp"    
			   
            />
        <TextView 
            android:id="@+id/dirctory_count"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="left"
			android:text="共多少章"   
			android:layout_toRightOf="@+id/dir_text"  
			android:layout_marginLeft="5dip" 
			android:textSize="20dp"            
            />
	<ImageView 
	    android:id="@+id/iv_dirctory_spinner"
        android:layout_width="14.34dip"
        android:layout_height="8.67dip"
        android:layout_centerVertical="true"
        android:background="@drawable/boy_dirctory_spinner"
        android:layout_toLeftOf="@+id/content_sort_tv"
	    />
    <TextView
        android:id="@+id/content_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.7dip"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="正序章节"
        android:textColor="@color/boyi_text_black"
        android:textSize="20sp" />
    
</RelativeLayout>
<com.boyiqove.view.DashedLine
    android:layout_below="@+id/rl_title_dir"
    android:layout_height="0.2dip"
    android:layout_width="match_parent"
    android:layout_marginLeft="16.7dip"
    android:layout_marginRight="16.7dip"
    android:layout_marginTop="16dp"
    android:textColor="#c8c0b6"
    />

<LinearLayout     
    android:layout_below="@+id/rl_title_dir"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="16dp"   
    >
    
    <ListView
        android:id="@+id/content_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:layout_marginLeft="16.7dip"
        android:layout_marginRight="16.7dip"
        android:cacheColorHint="#00000000" />
    
    <LinearLayout 
     android:layout_height="0dip"
   	 android:layout_width="match_parent"
   	 android:layout_weight="1"
    android:orientation="horizontal"  
    android:layout_gravity="center_vertical|center_horizontal"  
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/boyi_black"
    android:paddingTop="18.33dip"
    android:paddingBottom="16dip"
    android:id="@+id/directory_bottom_download"
        >
        <ImageView 	     
            android:id="@+id/dirctory_download_iv"
            android:layout_width="20dip"
            android:layout_height="match_parent"
            android:layout_marginRight="19.0dip"
            android:scaleType="fitCenter"
            android:background="@drawable/read_sett_download_yes"
            />
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dip"
            android:gravity="center_vertical"
            android:text="@string/boyi_dirctory_download"
            android:textColor="@color/boyi_textview_green_color"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>