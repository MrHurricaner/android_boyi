<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f0f0f0"
    >
    
    <!-- <include 
        layout="@layout/boyi_common_top_title"
        /> -->
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"   
        android:orientation="vertical" 
                
        >
       <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:layout_marginTop="9dp"
           android:orientation="horizontal"
          android:paddingLeft="9dp"
          android:paddingRight="9dp"
       
           >
       <EditText
           android:id="@+id/search_edit"
           android:layout_width="0dp"
           android:layout_weight="100"
           android:layout_height="match_parent"   
           android:background="@drawable/boyi_search_bg"
           android:ems="10"
           android:maxLines="1"
           android:paddingLeft="5dip"
           android:hint="请输入文本..." 
           android:textSize="13sp"
           >
       </EditText>
      
	<TextView 
	    android:layout_marginBottom="0.9dip"
	    android:layout_marginTop="0.9dip"
    	android:id="@+id/search_spinner"
    	android:layout_height="match_parent"
    	android:layout_marginLeft="5dp"
    	android:paddingLeft="3.5dp"
    	android:paddingRight="18dp"
    	android:layout_width="0dp"
        android:layout_weight="38"
          android:text="按书名"
           android:textColor="@color/boyi_black"
           android:gravity="center_vertical"
    	android:background="@drawable/boyi_search_spiner2"
    />
       <LinearLayout 
           android:id="@+id/search_textview"
           android:layout_height="27dp"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="1dp"
           android:layout_marginBottom="1dp"
           android:layout_width="0dp"
           android:layout_weight="32"
           android:gravity="center_vertical|center_horizontal"
           android:background="@color/boyi_main_top_bar"
           >
           
           <TextView 
               android:id="@+id/search_textview2"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="搜索"
               android:textColor="@color/boyi_white"
               />
           
       </LinearLayout>
		
		 </LinearLayout>
		 
		 <com.boyiqove.ui.storeadapter.listerScrollView
		   android:id="@+id/search_scrollview"
		   android:layout_height="wrap_content"
           android:layout_width="match_parent"
           
		     >
       <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="vertical"           
           >
       		
		 <LinearLayout 
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:layout_marginTop="9dp"
           android:orientation="horizontal"
           android:gravity="center_horizontal"
           android:visibility="gone"
           >
		
		<TextView 
		    android:id="@+id/search_book_name"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:text="书名"
		    />
		<TextView 
		    android:id="@+id/search_actor_name"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:text="作者"
		    />
		<TextView 
		    android:id="@+id/search_keyword_name"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:text="关键字"
		    />
    </LinearLayout>
    

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:background="@color/boyi_dark_gray"
     android:gravity="center_vertical" 
     android:visibility="gone"
     >

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginLeft="10dp"
         android:gravity="center_vertical"
         android:text="共多少"
         android:textColor="#ff9400" />

     <Button
         android:id="@+id/order_bt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView1"
 		android:layout_marginRight="10dp"
         android:layout_alignParentRight="true"
         android:background="@drawable/boyi_search_order"
         android:gravity="left|center_vertical"
         android:text="按销量" />
 </RelativeLayout>
 <LinearLayout 
     android:layout_height="wrap_content"
 	android:layout_width="match_parent"	
 	 android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:visibility="gone"
     >

     <TextView 
         android:id="@+id/hot_word_search1"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginLeft="10dp"
         android:text="莽荒纪"
         android:textColor="#ff6c00"
         />
     <TextView 
         android:id="@+id/hot_word_search2"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginLeft="17dp"
         android:text="天才相师"
         android:textColor="#ff6c00"
         />
     <TextView 
         android:id="@+id/hot_word_search3"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
          android:layout_marginLeft="17dp"
         android:text="最强弃少"
         android:textColor="#ff6c00"
         />
     <TextView 
         android:id="@+id/hot_word_search4"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"

          android:layout_marginLeft="17dp"
         android:text="求魔"
         android:textColor="#ff6c00"
         />
     <TextView 
         android:id="@+id/hot_word_search5"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
          android:layout_marginLeft="17dp"
         android:text="绝世唐门"
         android:textColor="#ff6c00"
         
         />
     
 </LinearLayout>
 
 
 <LinearLayout 
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:id="@+id/search_body2"
     android:orientation="vertical"
     android:visibility="gone"
     >
     
 </LinearLayout>
 
 <LinearLayout 
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:id="@+id/search_body3"
     android:orientation="vertical"
     android:visibility="gone"
     >
     
 </LinearLayout>
 
 <LinearLayout 
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:id="@+id/search_body"
     android:orientation="vertical"
     android:visibility="visible"
     > 
	    
	    <com.boyiqove.ui.storeutil.MyFlowLayout	  
	    android:id="@+id/recommend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        horizontalSpacing="15dip"
        verticalSpacing="5dip" 
        android:visibility="gone"
        >
	        
	   </com.boyiqove.ui.storeutil.MyFlowLayout>
	    
	    
	      <com.boyiqove.ui.storeutil.MyFlowLayout
	    android:id="@+id/recommend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        horizontalSpacing="15dip"       
        verticalSpacing="5dip"
        android:visibility="gone"
         >
	       
	        
	    </com.boyiqove.ui.storeutil.MyFlowLayout>
	    
  
 	  <com.boyiqove.ui.storeutil.MyFlowLayout
	    android:id="@+id/recommend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        horizontalSpacing="15dip"       
        verticalSpacing="5dip" 
        android:visibility="gone"
        >        
	    </com.boyiqove.ui.storeutil.MyFlowLayout>
	    
 	  
 
 
