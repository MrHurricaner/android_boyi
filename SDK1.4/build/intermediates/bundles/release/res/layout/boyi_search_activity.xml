</LinearLayout>

<com.boyiqove.ui.storeadapter.ScrollListView
     	android:id="@+id/search_list"
      	android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/boyi_gray"
            android:dividerHeight="2dp"
            android:visibility="gone"></com.boyiqove.ui.storeadapter.ScrollListView>
		</LinearLayout>
      </com.boyiqove.ui.storeadapter.listerScrollView>
      
  <ListView 
      android:id="@+id/search_list2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:cacheColorHint="#00000000"
      android:divider="@color/boyi_gray"
      android:dividerHeight="2dp"
       android:visibility="gone"/> 
          
	</LinearLayout>
	

</LinearLayout>
