<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/read_set_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/boyi_black_touming3"
    android:orientation="vertical" 
    android:visibility="visible"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45.6dip"
        android:orientation="horizontal" >
<LinearLayout 
    	android:id="@+id/read_font_sub_btn"
     	android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"            
        android:orientation="horizontal"
    >
    <ImageView 
        android:layout_height="16.33dip"
        android:layout_width="24dip"
        android:gravity="center"  
        android:background="@drawable/boe_textsize_up_selector"
        />
    
</LinearLayout>

<View 
    android:layout_height="match_parent"
    android:layout_width="0.0025dip"
    android:background="#646464"
    android:layout_marginTop="13.3dp"
    android:layout_marginBottom="9dp"
    />
        <LinearLayout 
    	android:id="@+id/read_font_add_btn"
     	android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"            
        android:orientation="horizontal"
    >
    <ImageView 
        android:layout_height="16.33dip"
        android:layout_width="24dip"
        android:gravity="center"  
        android:background="@drawable/boe_textsize_down_selector"
        />   
</LinearLayout>

    </LinearLayout>
<com.boyiqove.view.DashedLine
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="0.02dip"
    android:layout_width="match_parent"
    android:textColor="#696969"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.67dip"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
         >

        <ImageView
            android:layout_width="15.3dip"
            android:layout_height="15.3dip"
            android:background="@drawable/read_littlesun"
            android:contentDescription="屏幕亮度变暗" 
            android:layout_gravity="center_vertical"
            />

        <SeekBar
            android:id="@+id/read_seekBar"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dip"
            android:layout_marginRight="11dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1.0"
            android:maxHeight="3.0dip"
            android:minHeight="3.0dip"
            android:progressDrawable="@drawable/boyi_seekbar_progress"
            android:thumbOffset="5dip"
            android:thumb="@drawable/boyi_seekbar_image"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />

        <ImageView
            android:layout_width="23.3dip"
            android:layout_height="23.3dip"
            android:background="@drawable/read_bigsun"
            android:contentDescription="屏幕亮度变亮" 
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/black_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/boyi_black_night"
            android:contentDescription="夜间模式" 
            android:visibility="gone"
            />
        
        
    </LinearLayout>

    
    <GridView
        android:id="@+id/read_bg_gridview"
        style="@style/coverGridView"
        android:layout_marginBottom="13dip"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:listSelector="@drawable/boyi_listview_selector2"
        android:numColumns="4"
        android:visibility="visible" />

    <com.boyiqove.view.DashedLine
    android:layout_marginLeft="16.6dp"
    android:layout_marginRight="16.6dp"
    android:layout_height="0.02dip"
    android:layout_width="match_parent"
    android:textColor="#696969"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.6dip"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/read_linespacing0_iv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/boyi_ic_linespacing0" />
	<View 
    android:layout_height="24dp"
    android:layout_width="0.0025dip"
    android:background="#646464"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    />
        <ImageView
            android:id="@+id/read_linespacing1_iv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/boyi_ic_linespacing1" />
	<View 
    android:layout_height="24dp"
    android:layout_width="0.0025dip"
    android:background="#646464"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp"
    />
        <ImageView
            android:id="@+id/read_linespacing2_iv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/boyi_ic_linespacing2" />
		<View 
	    android:layout_height="24dp"
	    android:layout_width="0.0025dip"
	    android:background="#646464"
	    android:layout_marginLeft="27dp"
	    android:layout_marginRight="27dp"
   		 />
        <ImageView
            android:id="@+id/read_linespacing3_iv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@drawable/boyi_ic_linespacing3" />
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:orientation="horizontal" >

        <TextView
            android:visibility="gone"
            android:id="@+id/read_chinese_btn"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/boyi_btn_white_to_blue_selector"
            android:gravity="center"
            android:padding="4.0dip"
            android:text="简/繁"
            android:textColor="@color/boyi_text_black"
            android:textSize="@dimen/textsize_normal" />

        <TextView
            android:visibility="gone"
            android:id="@+id/read_more_btn"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/boyi_btn_white_to_blue_selector"
            android:gravity="center"
            android:padding="4.0dip"
            android:text="更多选项"
            android:textColor="@color/boyi_text_black"
            android:textSize="@dimen/textsize_normal" />
    </LinearLayout>

</LinearLayout>