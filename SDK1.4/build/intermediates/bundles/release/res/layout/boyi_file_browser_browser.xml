<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fb_browser_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/boyi_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fb_path_tv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="4.0dip"
            android:text="/storage/emulated/0"
            android:textColor="@color/boyi_text_gray"
            android:textSize="18sp" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="@color/boyi_gray" />

        <TextView
            android:id="@+id/fb_pathup_tv"
            style="@style/text_btn_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一级" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/boyi_gray" />

    <com.boyiqove.view.PinnedSectionListView
        android:id="@+id/fb_browser_listview"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/boyi_gray" />

    <LinearLayout
        android:background="@color/boyi_reader_backgorund"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >

        <TextView
            android:background="@null"
            android:id="@+id/fbb_select_all_tv"
            style="@style/text_btn_normal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="全选" 
            android:textColor="@color/boyi_white"/>

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="@color/boyi_white" />

        <TextView
             android:background="@null"
            android:id="@+id/fbb_delete_all_tv"
            style="@style/text_btn_normal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="取消"
            android:textColor="@color/boyi_white" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="match_parent"
            android:background="@color/boyi_white" />

        <TextView
            android:background="@null"
            android:id="@+id/fbb_add_shelf_tv"
            style="@style/text_btn_normal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加入书架(0)" 
            android:textColor="@color/boyi_white"/>
    </LinearLayout>

</LinearLayout>