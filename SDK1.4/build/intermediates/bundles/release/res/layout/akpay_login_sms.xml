<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff8f8f8" >

    <include
        android:id="@+id/order_title"
        layout="@layout/boyi_common_top_title"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/order_title"
        android:paddingTop="1.0dip"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dip" >

            <RelativeLayout
                android:id="@+id/order_view_sms_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="6.6dip"
                android:layout_marginRight="6.6dip"
                android:layout_marginTop="6.6dip"
                android:background="@drawable/ab_akpay_cicle_bg"
                android:orientation="vertical"
                android:paddingBottom="33dip"
                 >

                <TextView
                    android:id="@+id/login_tips_in"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:text="@string/boy_ak_tips"
                    android:textSize="20.0sp" />
				<LinearLayout 
				    android:layout_height="match_parent"
				    android:layout_width="match_parent"
				     android:layout_below="@id/login_tips_in"
				    android:orientation="horizontal"
				    android:weightSum="3"
				    android:layout_marginTop="23dip"
				    
				    >				    
                <Button
                    android:id="@+id/btn_onekey_login_cm"
                    android:layout_height="40.0dip"   
                    android:layout_width="0dip"
                    android:layout_weight="1" 
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/akpay_login_cm"
                    android:textColor="@color/boyi_white"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/boy_shape_round_green"
                    android:textSize="12.0dip" />
                
                <Button
                    android:id="@+id/btn_onekey_login_un"
                     android:layout_width="0dip"
                    android:layout_weight="1"               
                    android:layout_gravity="center"
                    android:layout_height="40.0dip"
                    android:text="@string/akpay_login_un"
                    android:textColor="@color/boyi_white"
                    android:background="@drawable/boy_shape_round_pink"
                    android:layout_marginLeft="11dip"
                    android:layout_marginRight="11dip"
                    android:textSize="12.0dip" />
                <Button
                    android:id="@+id/btn_onekey_login_cu"
                     android:layout_width="0dip"
                    android:layout_weight="1"               
                    android:layout_gravity="right|center_vertical"
                    android:layout_height="40.0dip"
                    android:text="@string/akpay_login_cu"
                    android:textColor="@color/boyi_white"
                    android:background="@drawable/boy_shape_round_blue"
                    android:layout_marginRight="11dip"
                    android:textSize="12.0dip" />
				</LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/view_show_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@drawable/akpay_lot_download_cicle1"
                    android:orientation="vertical"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingTop="20.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/onekey_login_remind_one"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_two"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_three"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />

                    
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_five"
                        android:textColor="#ff424242"
                    android:textSize="18.0sp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_six"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_seven"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_eight"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_nine"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_four"
                        android:textColor="#ff424242"
                        android:textSize="14.0sp" />
                    
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="温馨提示"
                    android:textColor="#ff424242"
                    android:textSize="18.0sp" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    

</RelativeLayout>