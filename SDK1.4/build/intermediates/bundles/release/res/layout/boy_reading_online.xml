<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
     >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="400dip"
    android:layout_gravity="bottom"
    android:background="@color/boyi_discount_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relalay1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="7dp"
        android:layout_alignParentLeft="true"
 		>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.67dp"
            android:textColor="@color/boyi_textview_green_color"
            android:text="书籍订单" 
            android:textSize="16.67dip"
            />

        <ImageView
            android:id="@+id/poupwindow_hide"
            android:layout_width="31.67dp"
            android:layout_height="31.67dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/boy_guanbi" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boyi_dark_gray" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/boy_order_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relalay1"
             android:layout_marginBottom="22dp"
		 >


            <TextView
                android:id="@+id/buy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16.67dp"
                android:layout_marginTop="12.7dp"
               
                android:text="您将从" 
                android:textSize="14dp"
                android:textColor="#7e7e7e"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/boy_buyorder_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/buy_bt1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:background="@drawable/boe_read_discountbt_selector"
                        android:text="下载后10章"
                        android:textSize="14.7sp" 
                        android:textColor="@color/boyi_textview_gray_color"
                        />

                    <Button
                        android:id="@+id/buy_bt2"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="17dp"
                        android:layout_weight="1"
                         android:background="@drawable/boe_read_discountbt_selector"
                        android:text="下载后20章"
                         android:textSize="14.7sp" 
                        android:textColor="@color/boyi_textview_gray_color"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp" >

                    <Button
                        android:id="@+id/buy_bt3"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:background="@drawable/boe_read_discountbt_selector"
                        android:text="下载后100章"
                         android:textSize="14.7sp" 
                        android:textColor="@color/boyi_textview_gray_color"
                        />

                    <Button
                        android:id="@+id/buy_bt4"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="17dp"
                        android:layout_weight="1"
                        android:background="@drawable/read_buy_button"
                        android:text="下载后续所有"
                        android:textSize="14.7sp" 
                        android:textColor="@color/boyi_textview_gray_color"
                         />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dip"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                 >
				<TextView 
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="19.3sp"
                    android:layout_marginLeft="16.67dp"
                    android:text="@string/boyi_kindly_remind"
                    android:textColor="@color/boyi_textview_gray_color"
				    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.67dp"
                android:layout_marginRight="16.67dp"
                android:layout_marginTop="8dp"
                android:textColor="#b3b4aa"
                android:text="@string/boyi_buybook_wenxintishi1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="16.67dp"
                android:layout_marginLeft="16.67dp"
                android:layout_marginBottom="54.67dip"
                android:textColor="#b3b4aa"
                android:text="@string/boyi_buybook_wenxintishi2" />

        </LinearLayout>
 </LinearLayout>

</LinearLayout>