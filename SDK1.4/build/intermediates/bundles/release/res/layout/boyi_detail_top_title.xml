<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dip"
    android:background="@color/boyi_textview_green_color"
    android:gravity="center_vertical" 
    android:id="@+id/green_title_bar"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
    <LinearLayout 
        android:id="@+id/boe_back_bt"
		    android:layout_height="match_parent"
		    android:layout_width="100dp"
        >
	<ImageView 
		    android:layout_height="22dp"
		    android:layout_width="22.7dip"
		    android:layout_marginLeft="16.7dp"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/boe_back_button"
		    android:scaleType="fitCenter"
		    />
		</LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >
		
        <TextView
            android:id="@+id/search_top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="书籍详情"
            android:textColor="@color/boyi_white"
            android:textSize="18sp" 
            />
    </LinearLayout>

</RelativeLayout>