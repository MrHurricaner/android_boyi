<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
         android:layout_width="105dp"
         android:layout_height="104dp"
         android:background="@drawable/boyi_xiala_bg"
         android:orientation="vertical"
         android:paddingBottom="12dp"
         android:layout_marginRight="8.5dp"
         android:id="@+id/menu_ll">
       <LinearLayout
        android:id="@+id/enter_bookshelf1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/bookshelf"
            android:layout_marginRight="10dp"/>
       <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="#8a8a8a"
          android:textSize="13sp"
          android:text="看书架"/>  
    </LinearLayout>
    <View
        android:layout_marginTop="12dp"
        android:layout_marginLeft="3.3dp"
        android:layout_marginRight="3.3dp"
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/enter_user_center1" 
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView 
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/boyi_user_center"
            />
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="个人中心"
          android:textSize="13sp"
          android:textColor="#8a8a8a"
          />  
    </LinearLayout>
    
    </LinearLayout>
    
    
    

</LinearLayout>