<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/boyi_white"
	        android:orientation="horizontal"
	        android:paddingTop="10dp"
	        android:paddingBottom="14dp"
	        android:paddingRight="19dp">

	        <com.boyiqove.library.volley.toolbox.NetworkImageView
	            android:id="@+id/cover_book"
	            android:layout_width="65dp"
	            android:layout_height="82dp"
	            android:scaleType="fitXY"
	            
	            />

	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="10dp"
	            android:layout_weight="0.46"
	            android:layout_marginTop="7dp"
	            android:orientation="vertical" >
	            <RelativeLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >

	                <TextView
	                    android:id="@+id/book_detail_words"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="top"
	                    android:gravity="top"
	                    android:layout_marginRight="25dip"
	                    android:textSize="16sp"
	                    android:textColor="@android:color/black"
	                    android:text="书籍名称" />

	                <TextView
	                    android:id="@+id/search_item_book_state"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:gravity="center_vertical"
	                    android:layout_alignParentRight="true"
	                    android:text="状态"
	                    android:visibility="gone"
	                    android:textColor="@color/boyi_light_red"
	                    android:textSize="12sp" />
	            </RelativeLayout>

	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:orientation="horizontal" >

	                <TextView
	                    
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="作者："
	                    android:textColor="#565656"
	                    android:textSize="12sp" />

	                <TextView
	                   android:id="@+id/book_author_name"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="作者名"
	                    android:textColor="#565656"
	                    android:textSize="12sp" />
	                
	                
	            </LinearLayout>

	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >

	                <TextView
	                    android:id="@+id/section_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="简介："
	                    android:textColor="#8C8C8C"
	                    android:textSize="12sp" />

	                <TextView
	                    android:id="@+id/book_detail_Desc"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="好书"
	                    android:textColor="#8C8C8C"
	                    android:textSize="12sp" 
	                    android:maxLines="2"
	                    android:ellipsize="end"/>
	            </LinearLayout>
				</LinearLayout>
	    </LinearLayout>
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="3dp"
	        android:background="@drawable/xuxian"
	        />
 </LinearLayout>

