<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        
        <TextView 
            android:id="@+id/direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目录"
            android:textSize="13.3sp"
            android:textColor="#8c8c8c"
            android:layout_centerVertical="true"
            android:ellipsize="end"
			android:maxLines="1"
			android:visibility="gone"
            />
        
        <TextView 
            android:id="@+id/direction_tv2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/direction_tv"
            android:textColor="#434443"
            android:layout_centerVertical="true"
            android:ellipsize="end"
			android:maxLines="1"
			android:textSize="13.3sp"
			android:visibility="gone"
            />
        
        <TextView 
            android:id="@+id/toll_tv"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"           
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="是否收费"
            android:textColor="@color/boyi_dark_red"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <com.boyiqove.view.DashedLine
    android:layout_height="0.02dip"
    android:layout_width="match_parent"
    android:textColor="#f0eeed"
    android:layout_alignParentBottom="true"
    />
    </RelativeLayout>
    
      

</LinearLayout>