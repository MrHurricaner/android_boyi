<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
	        android:layout_height="21dp"
	        android:layout_width="match_parent"
	        android:paddingLeft="9dp"
	        android:layout_marginTop="8dp"
	        android:orientation="horizontal"
	        >
			        <ImageView 
			            android:layout_height="22dp"
			            android:layout_width="3.5dp"
			            android:background="@color/boyi_main_top_bar"
			            />
	    <TextView 
	        android:id="@+id/search_biaoqian"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="@string/boyi_search_boy_recommend"	    
	        android:textColor="#00b5ff"
	        android:layout_gravity="bottom"
	        />
	    </LinearLayout>
	    
    <View 
	        android:layout_height="0.8dip"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="9dp"
	        android:layout_marginRight="9dp"
	        android:layout_marginTop="4dp"
	        android:background="@color/boyi_dark_gray"
	        />

</LinearLayout>