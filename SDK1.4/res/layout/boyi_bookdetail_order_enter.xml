<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <include layout="@layout/boyi_common_top_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:background="@drawable/boyi_hui_bg">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6.0dip"
                android:background="@drawable/akpay_lot_download_cicle"
                android:orientation="vertical" >

                

                <TextView
                    android:id="@+id/txt_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.0dip"
                    android:layout_marginTop="26.0dip"
                    android:text="@string/akpay_login_ishugui_tips"
                    android:textSize="20.0sp" 
                    android:textColor="#4a4a4a"/>

                <TextView
                    android:id="@+id/txt_warn_bodys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.0dip"
                    android:layout_marginTop="24.0dip"
                    android:textColor="#474747"
                    android:text=""
                    android:textSize="13.0sp" />
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <!-- <ImageView 
                       android:id="@+id/iv_Automatic"
                       android:layout_marginLeft="21.0dip"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dip"
                       android:src="@drawable/meigou_kuan"/> -->
                   <TextView
                       android:id="@+id/iv_Automatic"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="8dip"
                       android:layout_marginLeft="21.0dip"
                       android:textSize="12sp"
                       android:text="   自动购买,以后不在提示"
                       android:textColor="#9f9f9f"
                       />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_enter_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_marginRight="34.0dip"
                    android:layout_marginTop="27.0dip"
                    android:background="@drawable/boy_shape_round_pink"
                    android:padding="15.0dip"
                    android:text="@string/akpay_enter_and_order"
                    android:textColor="#ffffffff"
                    android:textSize="20.0sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@drawable/akpay_lot_download_cicle1"
                    android:orientation="vertical"
                    android:paddingBottom="15.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingTop="20.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/order_description"
                        android:textSize="13.0sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/user_sug"
                        android:textSize="13.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/cm_user_telephone_charge_order"
                        android:textSize="13.0sp" />

                    <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/user_sug"
                        android:textSize="13.0sp" /> -->

                    <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginTop="1.0dip"
                        android:text="@string/onekey_login_remind_four"
                        android:textSize="13.0sp" /> -->
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28.0dip"
                    android:layout_marginTop="7.0dip"
                    android:text="温馨提示"
                    android:textColor="#ff4d4d4d"
                    android:textSize="18.0sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>