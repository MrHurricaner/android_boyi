<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10.0dip" />

            <gradient
                android:angle="270.0"
                android:endColor="@color/boyi_progress_bar"
                android:startColor="@color/boyi_progress_bar" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8.0dip" />
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/boyi_reader_backgorund"
                    android:endColor="@color/boyi_reader_backgorund"
                    android:startColor="@color/boyi_reader_backgorund" />
            </shape>
        </clip>
    </item>

</layer-list>